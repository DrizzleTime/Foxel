{
  "foxpkg": "1.0",
  "key": "cc.foxel.videolibrary",
  "name": "视频库",
  "version": "1.0.0",
  "description": "影视刮削与媒体库管理，支持从 TMDB 获取电影和电视剧的元数据信息",
  "i18n": {
    "en": {
      "name": "Video Library",
      "description": "Media library management with metadata fetching from TMDB for movies and TV shows."
    }
  },
  "author": "Foxel",
  "website": "https://github.com/user/foxel",
  "license": "MIT",

  "frontend": {
    "entry": "frontend/index.js",
    "openApp": true,
    "supportedExts": ["mp4", "webm", "ogg", "m4v", "mov", "mkv", "avi", "wmv", "flv", "3gp"],
    "defaultBounds": { "width": 960, "height": 600, "x": 180, "y": 120 },
    "defaultMaximized": false,
    "icon": "assets/icon.svg"
  },

  "backend": {
    "routes": [
      {
        "module": "backend/routes/api.py",
        "prefix": "/api/plugins/video-library",
        "tags": ["video-library"]
      }
    ],
    "processors": [
      {
        "module": "backend/processors/video_library.py",
        "type": "video_library",
        "name": "影视入库"
      }
    ]
  },

  "dependencies": {
    "python": ">=3.10",
    "packages": ["httpx>=0.24"]
  }
}
